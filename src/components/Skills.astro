---
import { info } from "../../public/portafolio.json";

const { skills } = info;
---

<section id="skills" class="container pt-5">
  <div class="row">
    <div class="col">
      <p class="tag-title">Skills</p>
      <p>
        Herramientas que he ido incluyendo en mis conocimientos durante mi carrera.
      </p>
    </div>
  </div>
  <div class="row skillsBox flex-row gap-2 px-1">
    {
      skills.map(({ name, status }) => {
        const checkedStatus = status === "true" ? "d-block skills" : "d-none";
        return (
          <span class={checkedStatus}>
            <code>{name}</code>
          </span>
        );
      })
    }
  </div>
</section>
<style>
  .skills {
    background-color: #EA5F34;
    border-radius: 0.5rem;
    padding: 0.05rem 0.5rem;
    width: fit-content;
  }
  code {
    color: #ffffff;
    font-size: 0.8rem;
  }
</style>
