---
import Layout from "../layouts/Layout.astro";
import X from "./icons/X.astro";
import LinkedIn from "./icons/LinkedIn.astro";
import { info } from "../../public/portafolio.json";
import SocialPill from "./SocialPill.astro";
import Logo from "./icons/Logo.astro";

const { emailwork, phone } = info;

const { profiles } = info;
---

<Layout>
  <footer class="footer py-5 bg-dark mt-5">
    <section class="row text-center gap-1">
      <article class="col-12">
        <h1 class="letter-spacing-4">Â¿Trabajemos?</h1>
      </article>
      <article class="col-12">
        <h2 class="letter-spacing-4">{phone}</h2>
      </article>
      <article class="col-12">
        <p>{emailwork}</p>
      </article>
      <article class="col-12 mt-5">
        <Logo class="logoFooter" />
      </article>
      <article class="copyright col-12 mt-1">
        <p class="text-center">{info.copyright}</p>
      </article>
    </section>
    <style>
      .logoFooter {
        max-height: 80px;
        --var-color-ga: #fff;
        --var-color-bo: #fff;
        --var-color-text: none;
      }

      .footer {
        padding: 5rem;
        color: #ffffff;
      }
      .copyright {
        font-size: 0.9rem;
        font-family:
          Menlo,
          Monaco,
          Lucida Console,
          Liberation Mono,
          DejaVu Sans Mono,
          Bitstream Vera Sans Mono,
          Courier New,
          monospace;
        opacity: 0.2;
        letter-spacing: 0.05rem;
      }
      .list-item {
        background-color: white;
        border-radius: 50px;
        height: 60px;
        width: 60px;
        animation: fadeIn 1550ms infinite alternate;
      }
      .list-item:hover {
        background-color: #ea5f34;
        animation: paused;
      }
      @keyframes fadeIn {
        from {
          opacity: 0.95;
        }
        to {
          opacity: 0.6;
        }
      }
    </style>
  </footer></Layout
>
